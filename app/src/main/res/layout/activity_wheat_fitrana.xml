<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".Wheat_Fitrana">

    <LinearLayout
        android:id="@+id/persons"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/NooFPersons"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Enter No Of Persons"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/WheatPrice"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Enter price of Wheat per Kilogram"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/calculateWheatFitrana"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:text="Calculate"
            android:translationY="70dp" />

        <TextView
            android:id="@+id/wheatFitranaOutput"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:text="Fitraana To be Paid"
            android:textAlignment="center"
            android:textSize="24sp"
            android:translationY="130dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>